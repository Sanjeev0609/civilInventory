<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="@drawable/card_border"
        android:background="@drawable/card_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_maintenance"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_name_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                app:layout_constraintTop_toTopOf="@+id/iv_product"
                android:textSize="14sp"
                android:textColor="@color/brown"
                app:layout_constraintStart_toEndOf="@+id/iv_product"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name "
                app:layout_constraintTop_toTopOf="@+id/iv_product"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_name_heading"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tv_price_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price : "
                app:layout_constraintTop_toBottomOf="@+id/tv_name_heading"
                android:textSize="14sp"
                android:textColor="@color/brown"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/iv_product"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 "
                app:layout_constraintTop_toTopOf="@+id/tv_price_heading"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_name_heading"
                android:layout_marginStart="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
              app:layout_constraintStart_toStartOf="@id/tv_price_heading"
                app:layout_constraintTop_toBottomOf="@id/tv_price_heading"
                android:layout_marginTop="10dp"
                android:id="@+id/lt_quantity">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/iv_plus"
                    app:srcCompat="@drawable/ic_baseline_add_box_24"
                    android:layout_weight="1"
                    app:tint="@color/brown" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_quantity"
                    android:text="0.00"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/iv_minus"
                    app:tint="@color/brown"
                    app:srcCompat="@drawable/ic_baseline_indeterminate_check_box_24"
                    android:layout_weight="1" />



            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>