<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_name"
        android:text="Name"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_product_price"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_price"
        android:textAlignment="center"
        android:text="Price"
        app:layout_constraintStart_toEndOf="@id/tv_product_name"
        app:layout_constraintEnd_toStartOf="@id/tv_product_quantity"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_quantity"
        android:textAlignment="center"
        android:text="Quantity"
        app:layout_constraintStart_toEndOf="@id/tv_product_price"
        app:layout_constraintEnd_toStartOf="@id/tv_product_amount"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_amount"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/tv_product_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Amount"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>