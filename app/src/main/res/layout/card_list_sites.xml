<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="@drawable/card_border"
        android:background="@drawable/card_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_site"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_residential_apartments"
                android:tint="@color/brown"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_name_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner Name : "
                app:layout_constraintTop_toTopOf="@+id/iv_site"
                android:textSize="14sp"
                android:textColor="@color/brown"
                app:layout_constraintStart_toEndOf="@+id/iv_site"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name "
                app:layout_constraintTop_toTopOf="@+id/iv_site"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_name_heading"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tv_address_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                app:layout_constraintTop_toBottomOf="@+id/tv_name_heading"
                android:textSize="14sp"
                android:textColor="@color/brown"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/iv_site"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landmark : "
                app:layout_constraintTop_toTopOf="@+id/tv_address_heading"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_address_heading"
                android:layout_marginStart="8dp"/>

<!--            <TextView-->
<!--                android:id="@+id/tv_landmark_heading"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Landmark : "-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tv_address_heading"-->
<!--                android:textSize="14sp"-->
<!--                android:textColor="@color/brown"-->
<!--                android:layout_marginTop="10dp"-->
<!--                app:layout_constraintStart_toEndOf="@+id/iv_site"-->
<!--                android:layout_marginStart="8dp"/>-->

<!--            <TextView-->
<!--                android:id="@+id/tv_landmark"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="1000 "-->
<!--                app:layout_constraintTop_toTopOf="@+id/tv_landmark_heading"-->
<!--                android:textSize="14sp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textStyle="bold"-->
<!--                app:layout_constraintStart_toEndOf="@+id/tv_name_heading"-->
<!--                android:layout_marginStart="8dp"/>-->
            <TextView
                android:id="@+id/tv_mobile_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile : "
                app:layout_constraintTop_toBottomOf="@+id/tv_address_heading"
                android:textSize="14sp"
                android:textColor="@color/brown"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/iv_site"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890 "
                app:layout_constraintTop_toTopOf="@+id/tv_mobile_heading"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_mobile_heading"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_building_construction"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>