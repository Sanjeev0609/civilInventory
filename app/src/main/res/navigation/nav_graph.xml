<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.builderstool.DashboardFragment"
        android:label="Builders Tool"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_searchActivity"
            app:destination="@id/searchActivity" />
    </fragment>
    <fragment
        android:id="@+id/productsListFragment"
        android:name="com.example.builderstool.ui.products.ProductsListFragment"
        android:label="Products" />
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.builderstool.ui.products.AddProductFragment"
        android:label="Create Products" />
    <fragment
        android:id="@+id/addSiteFragment"
        android:name="com.example.builderstool.ui.sites.AddSiteFragment"
        android:label="Add Site" />
    <fragment
        android:id="@+id/sitesListFragment"
        android:name="com.example.builderstool.ui.sites.SitesListFragment"
        android:label="Sites" >
        <action
            android:id="@+id/action_sitesListFragment_to_siteFragment"
            app:destination="@id/siteFragment" />
        <action
            android:id="@+id/action_sitesListFragment_to_editOrderFragment"
            app:destination="@id/editOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/addSupplierFragment"
        android:name="com.example.builderstool.ui.suppliers.AddSupplierFragment"
        android:label="Add Supplier" />
    <fragment
        android:id="@+id/suppliersListFragment"
        android:name="com.example.builderstool.ui.suppliers.SuppliersListFragment"
        android:label="Suppliers" />
    <fragment
        android:id="@+id/purchaseFragment"
        android:name="com.example.builderstool.ui.purchase.PurchaseFragment"
        android:label="Purchase" />
    <fragment
        android:id="@+id/listPurchaseFragment"
        android:name="com.example.builderstool.ui.purchase.ListPurchaseFragment"
        android:label="Purchases" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.builderstool.ui.orders.OrderFragment"
        android:label="Create Order" >
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer"/>
        <argument
            android:name="name"
            android:defaultValue=""
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/siteFragment"
        android:name="com.example.builderstool.ui.sites.SiteFragment"
        android:label="Site" >
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer"/>
        <argument
            android:name="name"
            android:defaultValue=""
            app:argType="string"/>
        <action
            android:id="@+id/action_siteFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_siteFragment_to_editOrderFragment"
            app:destination="@id/editOrderFragment" />

    </fragment>
    <fragment
        android:id="@+id/editOrderFragment"
        android:name="com.example.builderstool.ui.orders.EditOrderFragment"
        android:label="Edit Order" >
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer"/>
        <argument
            android:name="paid"
            android:defaultValue="0"
            app:argType="integer"/>
        <argument
            android:name="balance"
            android:defaultValue="0"
            app:argType="integer"/>
        <argument
            android:name="total"
            android:defaultValue="0"
            app:argType="integer"/>
    </fragment>
    <activity
        android:id="@+id/searchActivity"
        android:name="com.example.builderstool.SearchActivity"
        android:label="SearchActivity" />
</navigation>